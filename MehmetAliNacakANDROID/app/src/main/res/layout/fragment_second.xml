<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SecondFragment">


    <EditText
        android:id="@+id/IsimText"
        android:layout_width="351dp"
        android:layout_height="49dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Müşterinin İsmi"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/UlkeText"
        android:layout_width="373dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Müşterinin Ülkesi"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IsimText"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="152dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UlkeText"
        app:layout_constraintVertical_bias="0.71">

        <Button
            android:id="@+id/KaydetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="Kaydet"
            android:text="Kaydet" />

        <Button
            android:id="@+id/SilButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="Sil"
            android:text="Sil" />

        <Button
            android:id="@+id/GuncelleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="Guncelle"
            android:text="Güncelle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>